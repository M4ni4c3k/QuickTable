{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020", // Target ECMAScript 2020 for modern browser support
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Include DOM types for web development
    "module": "ESNext", // Use ES modules
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Use bundler module resolution
    "allowImportingTsExtensions": true, // Allow importing .ts/.tsx files directly
    "verbatimModuleSyntax": true, // Enforce strict module syntax
    "moduleDetection": "force", // Force module detection
    "noEmit": true, // Don't emit files (Vite handles bundling)
    "jsx": "react-jsx", // Use React JSX transform

    /* Linting */
    "strict": true, // Enable all strict type checking options
    "noUnusedLocals": true, // Error on unused local variables
    "noUnusedParameters": true, // Error on unused parameters
    "erasableSyntaxOnly": true, // Only allow syntax that can be erased
    "noFallthroughCasesInSwitch": true, // Error on fallthrough cases in switch
    "noUncheckedSideEffectImports": true // Error on unchecked side effect imports
  },
  "include": ["src"] // Include all files in the src directory
}
